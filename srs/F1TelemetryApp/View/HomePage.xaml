<Page x:Class="F1TelemetryApp.View.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:F1TelemetryApp.View"
      xmlns:vm="clr-namespace:F1TelemetryApp.ViewModel"
      xmlns:conv="clr-namespace:F1TelemetryApp.Converters"
      xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">
    <Page.DataContext>
        <vm:HomePageViewModel />
    </Page.DataContext>
    <Grid Background="{StaticResource PrimaryBackground}">
        <TextBlock Text="Home page!"
                   FontSize="20"
                   Foreground="{StaticResource PrimaryText}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
    </Grid>
</Page>
